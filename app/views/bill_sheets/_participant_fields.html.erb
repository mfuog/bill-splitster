<div class="fields">
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= link_to_remove_fields "remove participant", f %>
    <%= f.hidden_field :id %>
    <%= f.input :name %>
  </div>

  <%= f.fields_for :bills do |builder| %>
    <%= render "bill_fields", :f => builder %>
  <% end %>
</div>
<p><%= link_to_add_fields "Add Bill", f, :bills %></p>