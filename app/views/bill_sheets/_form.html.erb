<%= simple_form_for(@bill_sheet) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, placeholder: "daytrip to Ã–land", label: false %>
    <% unless f.object.new_record? %>
      <div class="form-group">
        <%= f.label :status %>
        <%= f.select :status,
                     options_for_select(BillSheet.statuses.keys),
                     {},
                     class: "form-control" %>
      </div>
    <% end %>
  </div>
  
  <div>
  <%= f.fields_for :participants do |builder| %>
    <%= render "participant_fields", :f => builder %>
  <% end %>
  </div>
  
  <p><%= link_to_add_fields "Add participant", f, :participants %></p>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
